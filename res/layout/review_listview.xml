<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="8dp"
    android:paddingBottom="7dp">    

    <TextView 
    	android:id="@+id/review_listview_blogtitle" 
        android:layout_width="wrap_content" 
     	android:layout_height="wrap_content"
     	android:textSize="15sp"
     	android:textStyle="bold"
     	android:textColor="@color/review_list_blog_title"/>

    <LinearLayout 
    	android:orientation="horizontal" 
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">   

        <TextView 
        	android:id="@+id/review_listview_user" 
            android:layout_width="wrap_content" 
         	android:layout_height="wrap_content"
         	android:textStyle="bold"
         	android:textSize="13sp"
         	android:textColor="@color/review_list_user"/>
      
       	<TextView android:id="@+id/review_listview_date"  
    		android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
           	android:layout_marginLeft="8dp"
           	android:textSize="11sp"
            android:textColor="@color/review_list_date"/> 
            
    </LinearLayout>
    	
   	<TextView 
		android:id="@+id/review_listview_content" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginTop="3dp"
		android:textSize="13sp"
		android:textColor="@color/review_list_content"/>

</LinearLayout> 
